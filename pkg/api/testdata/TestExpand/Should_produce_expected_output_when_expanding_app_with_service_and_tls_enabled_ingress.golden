apiVersion: v1
kind: Service
metadata:
  name: dummy-app
spec:
  ports:
  - port: 80
    targetPort: 3000
  selector:
    app: dummy-app
  type: ClusterIP

---

apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: dummy-app
spec:
  rules:
  - host: dummy.io
    http:
      paths:
      - backend:
          serviceName: dummy-app
          servicePort: 80
        path: /
  tls:
  - hosts:
    - dummy.io
    secretName: dummy-app-tls

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: dummy-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dummy-app
  template:
    metadata:
      labels:
        app: dummy-app
    spec:
      containers:
      - image: dummyredis:8.2.1
        name: dummy-app

---

